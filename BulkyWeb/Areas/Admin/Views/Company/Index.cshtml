@model List<Company>

<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Company List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i>  Insert New Company
				</a>
			</div>
		</div>

		<table id="tblData" class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					City
				</th>
				<th>
					Address
				</th>
				<th>
					Postal Code
				</th>
				<th>
					Phone Number
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
				@foreach(var company in Model.OrderBy(u => u.Name))
				{
					<tr>
						<td>@company.Name</td>
						<td>@company.City</td>
						<td>@company.StreetAddress</td>
						<td>@company.PostalCode</td>
						<td>@company.PhoneNumber</td>
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-controller="Company" asp-action="Upsert" asp-route-id="@company.Id" class="btn btn-primary mx-2">
									<i class="bi bi-pencil"></i> Edit
								</a>
								<a asp-controller="Company" asp-action="Delete" asp-route-id="@company.Id" class="btn btn-danger mx-2">
									<i class="bi bi-trash"></i> Delete
								</a>
							</div>
						</td>
					</tr>
				}
		</tbody>
	</table>
</div>